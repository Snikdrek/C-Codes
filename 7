#include <iostream>
#include <vector>

std::vector<int> sumOfEvenIntegers(int n, int k) {
    std::vector<int> result;
    
    // Check if it is possible to write n as the sum of k even integers
    if (n % 2 != 0 || k > n / 2) {
        return result; // Return an empty vector if not possible
    }
    
    // Write n as the sum of k even integers
    for (int i = 0; i < k - 1; i++) {
        result.push_back(2);
        n -= 2;
    }
    result.push_back(n);
    
    return result;
}

int main() {
    int n, k;
    std::cout << "Enter the value of n: ";
    std::cin >> n;
    std::cout << "Enter the value of k: ";
    std::cin >> k;
    
    std::vector<int> result = sumOfEvenIntegers(n, k);
    
    if (result.empty()) {
        std::cout << "It is not possible to write " << n << " as the sum of " << k << " even integers." << std::endl;
    } else {
        std::cout << n << " = ";
        for (int i = 0; i < result.size() - 1; i++) {
            std::cout << result[i] << " + ";
        }
        std::cout << result[result.size() - 1] << std::endl;
    }
    
    return 0;
}